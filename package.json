{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "forge-cast-cli",
  "title": "Forge Cast CLI",
  "description": "Use the Cast CLI directly inside Raycast",
  "icon": "command-icon.png",
  "author": "merklefruit",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Run Script",
      "description": "Template for running a script without any view",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.50.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}